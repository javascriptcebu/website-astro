---
import { Image } from "astro:assets";
import JSCebuLogo from "../assets/logo.png";
import BentoGrid from "./BentoGrid.astro";

const currentYear = new Date().getFullYear();

const footerLinks = {
  community: [
    { label: "About Us", href: "/mission-vision" },
    { label: "Members", href: "/members" },
    { label: "Partners", href: "/#partners" },
    { label: "Code of Conduct", href: "#" },
  ],
  resources: [
    { label: "Events", href: "/events" },
    { label: "Projects", href: "/community-projects" },
    { label: "Initiatives", href: "/initiatives" },
    { label: "Hacktoberfest", href: "/annual-hacktoberfest" },
  ],
  connect: [
    { label: "Facebook", href: "https://www.facebook.com/JavaScriptCebu/" },
    { label: "Twitter", href: "https://twitter.com/javascriptcebu" },
    { label: "GitHub", href: "https://github.com/javascriptcebu" },
    { label: "Discord", href: "#" },
  ],
  support: [
    { label: "Contact Us", href: "/official-links" },
    { label: "Brand Assets", href: "/promotional-materials" },
    { label: "Sponsor Us", href: "#" },
    { label: "FAQ", href: "#" },
  ],
};
---

<footer class="footer">
  <div class="footer-top">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Section -->
        <div class="footer-brand">
          <div class="brand-logo">
            <Image src={JSCebuLogo} alt="JavaScript Cebu" height={48} />
          </div>
          <p class="brand-description">
            A community-driven organization fostering growth, innovation, and
            collaboration among JavaScript developers in Cebu.
          </p>
          <div class="newsletter">
            <h4>Stay Updated</h4>
            <form class="newsletter-form">
              <input
                type="email"
                placeholder="Enter your email"
                class="email-input"
                required
              />
              <button type="submit" class="submit-btn">
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"></path>
                </svg>
              </button>
            </form>
          </div>
        </div>

        <!-- Links Sections -->
        <div class="footer-links">
          <div class="link-section">
            <h4>Community</h4>
            <ul>
              {
                footerLinks.community.map((link) => (
                  <li>
                    <a href={link.href}>{link.label}</a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="link-section">
            <h4>Resources</h4>
            <ul>
              {
                footerLinks.resources.map((link) => (
                  <li>
                    <a href={link.href}>{link.label}</a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="link-section">
            <h4>Connect</h4>
            <ul>
              {
                footerLinks.connect.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {link.label}
                      <svg
                        width="12"
                        height="12"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3" />
                      </svg>
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="link-section">
            <h4>Support</h4>
            <ul>
              {
                footerLinks.support.map((link) => (
                  <li>
                    <a href={link.href}>{link.label}</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <div class="bottom-content">
        <div class="copyright">
          <p>Â© {currentYear} JavaScript Cebu. All rights reserved.</p>
          <p class="tagline">Building the future, one commit at a time.</p>
        </div>
        <div class="social-icons">
          <a
            href="https://www.facebook.com/JavaScriptCebu/"
            aria-label="Facebook"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="https://twitter.com/javascriptcebu"
            aria-label="Twitter"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
              ></path>
            </svg>
          </a>
          <a
            href="https://github.com/javascriptcebu"
            aria-label="GitHub"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
          <a href="mailto:hello@jscebu.org" aria-label="Email">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-3xl);
  }

  .footer-top {
    padding: var(--space-3xl) 0 var(--space-2xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: var(--space-3xl);
  }

  /* Brand Section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .brand-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .newsletter h4 {
    margin-bottom: var(--space-sm);
    font-size: 1rem;
  }

  .newsletter-form {
    display: flex;
    gap: var(--space-xs);
    max-width: 300px;
  }

  .email-input {
    flex: 1;
    padding: 0.625rem 1rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .email-input::placeholder {
    color: var(--color-text-tertiary);
  }

  .email-input:focus {
    outline: none;
    border-color: var(--color-yellow);
  }

  .submit-btn {
    padding: 0.625rem;
    background: var(--color-yellow);
    border: none;
    border-radius: var(--radius-md);
    color: var(--color-black);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .submit-btn:hover {
    background: var(--color-yellow-dark);
    transform: translateY(-2px);
  }

  /* Links Sections */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-xl);
  }

  .link-section h4 {
    margin-bottom: var(--space-md);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text);
  }

  .link-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-section li {
    margin-bottom: var(--space-sm);
  }

  .link-section a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .link-section a:hover {
    color: var(--color-yellow);
    transform: translateX(4px);
  }

  /* Bottom Bar */
  .footer-bottom {
    background: var(--color-bg-tertiary);
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-border);
  }

  .bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .tagline {
    margin-top: var(--space-xs);
    font-style: italic;
    opacity: 0.8;
  }

  .social-icons {
    display: flex;
    gap: var(--space-md);
  }

  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .social-icons a:hover {
    background: var(--color-yellow);
    border-color: var(--color-yellow);
    color: var(--color-black);
    transform: translateY(-4px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .bottom-content {
      flex-direction: column;
      gap: var(--space-lg);
      text-align: center;
    }

    .newsletter-form {
      max-width: 100%;
    }
  }
</style>
