    <!-- Partners & CTA Section -->
    <section class="section-alt">
      <div class="container">
        <BentoGrid>
          <!-- Partners -->
          <BentoCard class="col-span-6">
            <div class="partners-section">
              <h3>Trusted by Leading Companies</h3>
              <div class="partners-grid">
                <div class="partner-card">
