<style>
  /* Sections */
  .section {
    padding: var(--space-3xl) 0;
    position: relative;
  }

  .section-alt {
    padding: var(--space-3xl) 0;
    background: var(--color-bg-secondary);
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .section-label {
    display: inline-block;
    padding: 0.375rem 1rem;
    background: var(--color-yellow);
    color: var(--color-black);
    border-radius: var(--radius-2xl);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .section-header h2 {
    margin-bottom: var(--space-sm);
  }

  .section-header p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-3xl) 0 var(--space-2xl);
    background: linear-gradient(
      180deg,
      var(--color-bg) 0%,
      color-mix(in srgb, var(--color-yellow) 5%, var(--color-bg)) 100%
    );
    position: relative;
    overflow: hidden;
  }

  .hero .container {
    position: relative;
  }

  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-2xl) 0;
  }

  .hero-badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: color-mix(in srgb, var(--color-yellow) 15%, var(--color-bg));
    border: 1px solid var(--color-yellow);
    border-radius: var(--radius-2xl);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-yellow);
    margin-bottom: var(--space-lg);
    animation: fadeIn 0.6s ease;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5.5rem);
    font-weight: 800;
    line-height: 0.95;
    margin-bottom: var(--space-lg);
    background: linear-gradient(
      135deg,
      var(--color-text) 0%,
      var(--color-yellow) 50%,
      var(--color-text) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% auto;
    animation: shimmer 3s linear infinite;
  }

  @keyframes shimmer {
    to {
      background-position: 200% center;
    }
  }

  .hero-description {
    font-size: 1.375rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2xl);
    line-height: 1.6;
    animation: fadeIn 0.8s ease 0.2s backwards;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    animation: fadeIn 1s ease 0.4s backwards;
  }

  .hero-visual {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    max-width: 1200px;
    height: 400px;
    pointer-events: none;
    z-index: 0;
  }

  .floating-card {
    position: absolute;
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    box-shadow: var(--shadow-lg);
    animation: float 6s ease-in-out infinite;
  }

  .floating-card.card-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .floating-card.card-2 {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .floating-card.card-3 {
    top: 10%;
    right: 20%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .card-icon {
    font-size: 1.5rem;
  }

  .card-label {
    font-weight: 600;
    font-size: 0.875rem;
  }

  /* Buttons */
  .btn {
    padding: 0.875rem 1.75rem;
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: 1rem;
    transition: all var(--transition-base);
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    text-decoration: none;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--color-yellow);
    color: var(--color-black);
    border-color: var(--color-yellow);
  }

  .btn-primary:hover {
    background: var(--color-yellow-dark);
    border-color: var(--color-yellow-dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(244, 208, 63, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
    border-color: var(--color-text);
    transform: translateY(-2px);
  }

  .btn-dark {
    background: var(--color-black);
    color: var(--color-white);
    border-color: var(--color-black);
  }

  .btn-dark:hover {
    background: var(--color-gray-800);
    border-color: var(--color-gray-800);
    transform: translateY(-2px);
  }

  .link-arrow {
    color: var(--color-text);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .link-arrow:hover {
    color: var(--color-yellow);
    transform: translateX(4px);
  }

  /* Mission Card */
  .mission-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    height: 100%;
    align-items: center;
  }

  .mission-content h2 {
    font-size: 2rem;
    margin-bottom: var(--space-md);
  }

  .mission-values {
    display: flex;
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .value {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    font-weight: 500;
  }

  .value-icon {
    font-size: 1.25rem;
  }

  .mission-visual {
    height: 300px;
  }

  /* Stat Cards */
  .stat-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    min-height: 200px;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1;
    font-family: var(--font-display);
    margin-bottom: var(--space-xs);
  }

  .bento-card.primary .stat-number,
  .bento-card.gradient .stat-number {
    color: var(--color-black);
  }

  .stat-label {
    font-size: 1rem;
    font-weight: 500;
    opacity: 0.8;
    margin-bottom: var(--space-sm);
  }

  .stat-growth {
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
  }

  /* Featured Event */
  .featured-event {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
    height: 100%;
  }

  .event-badge {
    display: inline-block;
    padding: 0.375rem 1rem;
    background: var(--color-yellow);
    color: var(--color-black);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .event-content h3 {
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
  }

  .event-info {
    display: grid;
    gap: var(--space-md);
    margin: var(--space-xl) 0;
    padding: var(--space-lg);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-lg);
  }

  .info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .info-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .info-value {
    font-weight: 600;
  }

  /* Community Cards */
  .community-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .community-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .community-info h3 {
    color: var(--color-white);
    margin-bottom: var(--space-sm);
  }

  .community-info p {
    color: var(--color-white);
    opacity: 0.9;
    margin-bottom: var(--space-md);
    flex: 1;
  }

  .community-stats {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.875rem;
    color: var(--color-white);
    opacity: 0.8;
  }

  /* Initiatives */
  .initiatives-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .initiative-item {
    display: flex;
    gap: var(--space-md);
    align-items: center;
  }

  .initiative-item h4 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .initiative-item p {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Projects */
  .projects-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .project-preview {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text);
  }

  .project-icon {
    font-size: 3rem;
  }

  .project-count {
    font-weight: 600;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tech-tag {
    padding: 0.375rem 0.875rem;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .tech-tag:hover {
    background: var(--color-yellow);
    color: var(--color-black);
    border-color: var(--color-yellow);
